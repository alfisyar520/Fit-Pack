<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DashboardActivity">

    <RelativeLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/background_warped">

        <LinearLayout
            android:id="@+id/fitpack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIT - PACK"
                android:textColor="@color/putih"
                android:layout_gravity="center"
                android:textSize="50sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fitpack"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sahabat Keputihan Anda"
                android:textColor="@color/putih"
                android:textSize="20sp"/>

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:padding="20dp"
            android:background="@drawable/frame"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tanya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apakah anda ingin cek kesehatan keputihan anda sekarang?"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="@color/hitam"
                />

            <LinearLayout
                android:layout_below="@+id/tv_tanya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <Button
                    android:id="@+id/btn_dash_cekKesehatan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ya"/>
                <Button
                    android:id="@+id/btn_dash_nanti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nanti"/>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>