<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BtActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink4"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/tv_bt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textColor="#fff"
                android:textAllCaps="true"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_above="@id/tv_bt_2"
        android:id="@+id/tv_bt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="15dp"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="@color/pink4"
        android:text="Not Connected"
        android:background="@drawable/frame"/>


    <TextView
        android:layout_centerInParent="true"
        android:id="@+id/tv_bt_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/pink4"
        android:text="Silahkan melakukan tes dengan alat yang sudah tersedia"
        android:background="@drawable/frame"/>

    <Button
        android:id="@+id/btn_bt_ambil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Ambil Hasil Tes"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/putih"
        android:background="@drawable/background_button"/>

</RelativeLayout>